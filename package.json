{
  "name": "flex-template",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.10.0 <23",
    "npm": ">=10.0.0 <11"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend:nopnp",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "dev:backend:nopnp": "NODE_OPTIONS= PNP_DISABLE=1 YARN_ENABLE_PNP=0 YARN_NODE_LINKER=node-modules convex dev",
    "dev:nopnp": "npm-run-all --parallel dev:frontend dev:backend:nopnp",
    "build": "vite build",
    "lint": "tsc -p convex -noEmit --pretty false && tsc -p . -noEmit --pretty false && convex dev --once && vite build",
    "eval:validate": "node search-evals/to-csv.mjs search-evals/sample-output.json > /dev/null || true",
    "eval:csv": "node search-evals/to-csv.mjs",
    "dev:turbo": "turbo run dev --parallel",
    "build:turbo": "turbo run build",
    "lint:turbo": "turbo run lint",
    "type-check": "turbo run type-check"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.80",
    "@turbopuffer/turbopuffer": "^1.1.1",
    "clsx": "^2.1.1",
    "convex": "^1.24.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.1.0",
    "zeroentropy": "^0.1.0-alpha.6"
  },
  "devDependencies": {
    "turbo": "^2.1.3",
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "~10",
    "dotenv": "^16.4.7",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "npm-run-all": "^4.1.5",
    "postcss": "~8",
    "prettier": "^3.5.3",
    "tailwindcss": "~3",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  }
}
